<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="JSON" injector-id="sql" pattern="text" enabled="true">
      <display-name>text</display-name>
    </injection>
    <injection language="JSON" injector-id="xml">
      <display-name>press-publications/@publications</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("publications")).withParent(xmlTag().withLocalName(string().equalTo("press-publications")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>